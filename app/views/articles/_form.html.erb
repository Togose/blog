
<div style="width:650px; margin-top:100px; margin-left: auto; margin-right: auto">
  <%= bootstrap_form_for (@article) do |f| %>
    <ul>
    <% @article.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
    <p>
      <!-- <%= f.label :titulo %><br /> -->
      <%= f.text_field :titulo %>
    </p>
    <p>
      <!-- <%= f.label :descripcion %><br /> -->
      <%= f.text_area :descripcion %>
    </p>
    <p>
      <!-- <%= f.label :image %> -->
      <%= f.file_field :image, class: 'form-control'%>
    </p>
    <p>
      <%= f.submit %>
      <%= button_to 'Volver', articles_path, :method => "get", class: "btn btn-primary" %>
    </p>
  <% end %>
</div>
