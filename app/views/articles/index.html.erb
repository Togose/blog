<div style = "margin-left: 140px; margin-top:50px;">
  <%= button_to "Crear Nuevo Articulo", new_article_path, class: "btn btn-primary",
  :method => "get" %>
</div>
<ul id="articles">
  <% @articles.each do |article| %>
    <li>
      <!-- <%= article.titulo %>
      <%= article.descripcion %> -->
      <div class="panel panel-default" style="width:1200px; margin-top:50px;
      margin-left: auto; margin-right: auto">

        <div class="panel-heading">
          <h2><%= link_to article.titulo, article_path(article),
          class: 'article_title', id: "article_#{article.id}" %></h2>
        </div>

        <div id ="wrapper">

          <div id ="first">
            <div style="text-align: justify; margin: 20px">
              <%= article.descripcion %>
            </div>
          </div>

          <div class ="media" id ="second">
            <div class = "media-right">
              <%= link_to image_tag(article.image.url(:med),
              class: 'media-object'), article_path(article), target: '_blank' %>
            </div>
          </div>

        </div>
      </div>
    </li>
  <% end %>
</ul>
